<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Scripts/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Scripts/bootstrap/css/bootstrap-responsive.min.css")
    @Styles.Render("~/Content/ShipmentsLayout.css")
    @Styles.Render("~/Content/typeahead.css")
    <script src="@Url.Content("~/scripts/jquery-2.1.3.min.js")"></script>
    <script src="@Url.Content("~/scripts/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/scripts/Shipments.js")"></script>
    <script src="@Url.Content("~/scripts/typeahead.bundle.js")"></script>
    <script src="@Url.Content("~/scripts/handlebars.js")"></script>
    
    @{ Shipments.Utils.SessionHelper sessionHelper = new Shipments.Utils.SessionHelper();}
</head>
<body>
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="#">Shipments</a>
    </div>
    <div class="collapse navbar-collapse in" id="myNavbar">
      <ul class="nav navbar-nav">
        <li class="active"><a href="@Url.Content("~/shipments")">Home</a></li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">View<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="@Url.Content("~/Shipments")">Shipment</a></li>
            <li><a href="@Url.Content("~/PurchaseOrder")">Purchase Order</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Libraries<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="@Url.Content("~/brand")">Brand Library</a></li>
            <li><a href="@Url.Content("~/sku")">SKU Library</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">Admin<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="@Url.Content("~/Users")">Users</a></li>
            
          </ul>
        </li>     
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#"><span class="glyphicon glyphicon-user"></span> @sessionHelper.UserName</a></li>
        <li><a href="@Url.Content("~/SignIn/LogOut")"><span class="glyphicon glyphicon-log-in"></span> Log Out</a></li>
      </ul>
    </div>
  </div>
</nav>
    <div class="container-fluid RemovePadding">
        <div class="row-fluid">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 PageName">
                @RenderSection("_PageName", false)
            </div>
        </div>
        <div class="row-fluid RemovePadding">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
