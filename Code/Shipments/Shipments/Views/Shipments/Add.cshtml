@model Shipments.Models.Shipment
@{
    Layout = "/Views/Shared/_ShipmentsLayout.cshtml";
    ViewBag.Title = "Add Shipment";
}
@section _PageName{
    @ViewBag.Title
}
@using (Html.BeginForm("Save", "Shipments", FormMethod.Post, new { @roll = "form" }))
{
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 RemovePadding">
        @* <div id="the-basics" class="form-group">
            <input class="typeahead form-control" type="text" placeholder="States of USA" />
        </div>*@
        <input type="hidden" name="BrandID" id="BrandID" />
        <div id="the-basics" class="form-group">
            <label for="email">
                SKU:</label>
            <input class="typeahead form-control" type="text" placeholder="Type SKU" name="SKU" id="SKU" />
        </div>
        <div class="form-group">
            <label for="pwd">
                ShipmentID:</label>
            <input type="text" name="ShipmentID" class="form-control" id="ShipmentID" placeholder="Enter ShipmentID" />
        </div>
        <div class="form-group">
            <label for="email">
                Shipment Date:</label>
            <input type="text" name="ShipmentDate" class="form-control" id="ShipmentDate" placeholder="Shipment Date" />
        </div>
        <div class="form-group">
            <label for="email">
                Received Date At FBA:</label>
            <input type="text" name="FBAReceivedDate" class="form-control" id="FBAReceivedDate"
                placeholder="Enter Received Date At FBA" />
        </div>
        <div class="form-group">
            <label for="email">
                Quantity:</label>
            <input type="text" name="Quantity" class="form-control Qty" id="Quantity" placeholder="Enter Quantity" />
        </div>
        <div class="form-group">
            <label for="email">
                Item Cost:</label>
            <input type="text" name="ShipmentCost" class="form-control PerUnitCost" id="ShipmentCost" placeholder="Enter Shipment Cost"
                readonly="readonly" />
        </div>
        <div class="form-group">
            <label for="email">
                TotalCost:</label>
            <input type="text" name="TotalCost" class="form-control TotalCost" id="TotalCost" placeholder="Enter TotalCost"
                readonly="readonly" />
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="glyphicon glyphicon-ok"></i>Save</button>
        <button type="button" class="btn btn-default" onclick="location.href='@Url.Content("~/Shipments/")'">
            Cancel</button>
    </div>
}
