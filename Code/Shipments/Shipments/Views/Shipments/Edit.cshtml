@model Shipments.Models.Shipment
@{
    Layout = "/Views/Shared/_ShipmentsLayout.cshtml";
    ViewBag.Title = "Edit Shipment";
}
@section _PageName{
    @ViewBag.Title
}
@using (Html.BeginForm("Save", "Shipments", FormMethod.Post, new { @roll = "form" }))
{
    @Html.HiddenFor(x => x.ID)@Html.HiddenFor(x => x.BrandID)
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 RemovePadding">
        <div id="the-basics" class="form-group">
            <label for="email">
                SKU:</label>
            @Html.TextBoxFor(x => x.SKU, new { @class = "typeahead form-control", @placeholder = "Type SKU" })
        </div>
        <div class="form-group">
            <label for="pwd">
                ShipmentID:</label>
            @Html.TextBoxFor(x => x.ShipmentID, new { @class = "form-control", @placeholder = "Enter ShipmentID" })
        </div>
        <div class="form-group">
            <label for="email">
                Shipment Date:</label>
            @Html.TextBoxFor(x => x.ShipmentDate, new { @class = "form-control", @placeholder = "Enter Shipment Date" })
        </div>
        <div class="form-group">
            <label for="email">
                Received Date At FBA:</label>
            @Html.TextBoxFor(x => x.FBAReceivedDate, new { @class = "form-control", @placeholder = "Enter Received Date At FBA" })
        </div>
        <div class="form-group">
            <label for="email">
                Quantity:</label>
            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control Qty", @placeholder = "Enter Quantity" })
        </div>
        <div class="form-group">
            <label for="email">
                Item Cost:</label>
            @Html.TextBoxFor(x => x.ShipmentCost, new { @class = "form-control PerUnitCost", @placeholder = "Enter Item Cost", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label for="email">
                TotalCost:</label>
            @Html.TextBoxFor(x => x.TotalCost, new { @class = "form-control TotalCost", @placeholder = "Enter TotalCost", @readonly = "readonly" })
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="glyphicon glyphicon-ok"></i>Save</button>
        <button type="button" class="btn btn-default" onclick="location.href='@Url.Content("~/Shipments/")'">
            Cancel</button>
    </div>
}
