@model Shipments.Models.PurchaseOrder
@{
    Layout = "/Views/Shared/_ShipmentsLayout.cshtml";
    ViewBag.Title = "Add Purchase Order";
}
@section _PageName{
    @ViewBag.Title
}
@using (Html.BeginForm("Save", "PurchaseOrder", FormMethod.Post, new { @roll = "form" }))
{
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 RemovePadding">
        @* <div id="the-basics" class="form-group">
            <input class="typeahead form-control" type="text" placeholder="States of USA" />
        </div>*@
       <div id="the-basics" class="form-group">
            <label for="SKU">
                SKU:</label>
            <input class="typeahead form-control" type="text" placeholder="Type SKU" name="SKU" id="SKU" />
        </div>
       
        <div class="form-group">
            <label for="OrderDate">
                Order Date:</label>
            <input type="text" name="OrderDate" class="form-control" id="OrderDate" placeholder="Order Date" />
        </div>
        
        <div class="form-group">
            <label for="email">
                Quantity:</label>
            <input type="text" name="Quantity" class="form-control Qty" id="Quantity" placeholder="Enter Quantity" />
        </div>
        <div class="form-group">
            <label for="email">
                Cost:</label>
            <input type="text" name="Cost" class="form-control PerUnitCost" id="Cost" placeholder="Enter Order Cost"
                readonly="readonly" />
        </div>
        <div class="form-group">
            <label for="email">
                Order Amount:</label>
            <input type="text" name="TotalCost" class="form-control TotalCost" id="TotalCost" placeholder="Enter Total Cost"
                readonly="readonly" />
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="glyphicon glyphicon-ok"></i>Save</button>
        <button type="button" class="btn btn-default" onclick="location.href='@Url.Content("~/PurchaseOrder/")'">
            Cancel</button>
    </div>
}
