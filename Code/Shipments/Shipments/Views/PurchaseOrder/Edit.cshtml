@model Shipments.Models.PurchaseOrder
@{
    Layout = "/Views/Shared/_ShipmentsLayout.cshtml";
    ViewBag.Title = "Edit Purchase Order";
}
@section _PageName{
    @ViewBag.Title
}
@using (Html.BeginForm("Save", "PurchaseOrder", FormMethod.Post, new { @roll = "form" }))
{
    @Html.HiddenFor(q => q.ID)
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 RemovePadding">
        <div id="the-basics" class="form-group">
            <label for="email">
                SKU:</label>
            @Html.TextBoxFor(x => x.SKU, new { @class = "typeahead form-control", @placeholder = "Type SKU" })
        </div>
        <div class="form-group">
            <label for="email">
                Order Date:</label>
            @Html.TextBoxFor(x => x.OrderDate, new { @class = "form-control", @placeholder = "Enter Order Date" })
        </div>
        <div class="form-group">
            <label for="email">
                Quantity:</label>
            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control Qty", @placeholder = "Enter Quantity" })
        </div>
        <div class="form-group">
            <label for="email">
                Item Cost:</label>
            @Html.TextBoxFor(x => x.Cost, new { @class = "form-control PerUnitCost", @placeholder = "Enter Item Cost", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label for="email">
                TotalCost:</label>
            @Html.TextBoxFor(x => x.TotalCost, new { @class = "form-control TotalCost", @placeholder = "Enter TotalCost", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <label for="email">
                For ASIN:</label>
            @Html.TextBoxFor(x => x.ForASIN, new { @class = "form-control", @placeholder = "Enter For ASIN"})
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="glyphicon glyphicon-ok"></i>Save</button>
        <button type="button" class="btn btn-default" onclick="location.href='@Url.Content("~/PurchaseOrder/")'">
            Cancel</button>
    </div>
}
