@model Shipments.Models.Brand
@{
    Layout = "/Views/Shared/_ShipmentsLayout.cshtml";
    ViewBag.Title = "Add Brand";
}
@section _PageName{
    @ViewBag.Title
}
@using (Html.BeginForm("Save", "Brand", FormMethod.Post, new { @roll = "form" }))
{
    <div  class="col-xs-12 col-sm-12 col-md-5 col-lg-4 RemovePadding">
    <div class="form-group">
      <label for="email">Brand:</label>
      <input type="text" name="Name" class="form-control" id="Brand" placeholder="Enter Brand" />
    </div>
    <div class="form-group">
      <label for="email">Manufacturer:</label>
      <input type="text" name="Manufacturer" class="form-control" id="Manufacturer" placeholder="Enter Manufacturer" />
      
    </div>
    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i>Save</button>
     <button type="button" class="btn btn-default" onclick="location.href='@Url.Content("~/Brands")'">Cancel</button>
    </div>
}
